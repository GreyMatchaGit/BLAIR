<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane fx:id="togglePane" style="-fx-background-color: rgba(0,0,0,0);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ToggleButtonController">
   <children>
      <Rectangle fx:id="toggleBackground" arcHeight="50.0" arcWidth="30.0" fill="#f2f2f2" height="30.0" stroke="BLACK" strokeType="INSIDE" width="60.0" />
      <Circle fx:id="toggleCircle" fill="DODGERBLUE" layoutX="15.0" layoutY="15.0" radius="15.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
      <Button fx:id="toggleButton" layoutY="2.0" mnemonicParsing="false" prefHeight="3.0" prefWidth="60.0" style="-fx-background-color: rgba(0,0,0,0);" />
   </children>
</AnchorPane>
